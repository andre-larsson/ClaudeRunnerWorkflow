{
  "task_name": "test_auto_create",
  "task_description": "Test auto-creation of git project",
  "git_project_path": "../test-dir/auto-create",
  "git_base_branch": "develop",
  "worktree_base_path": "../test-dir/worktrees",
  "execution_mode": "sequential",
  "max_loops": 1,
  
  "initial_prompts": [
    {
      "name": "verify_setup",
      "prompt": "Check that git is working correctly. Create a test file and save the current directory contents to it."
    }
  ],
  "loop_prompts": [
    {
      "name": "create_done_file",
      "prompt": "Create design/TEST_DONE file."
    }
  ],
  "loop_break_condition": {
    "name": "create_done_file",
    "file": "design/TEST_DONE"
  },
  "runners": [
    {
      "name": "test_runner"
    }
  ]
}